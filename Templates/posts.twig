{% extends "base.twig" %}

{% block content %}
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                {% if session.isAdmin %}
                    <a class="d-flex align-items-center link-add-item justify-content-center"
                       href="/blog/public/posts/create/">
                        <i class="fa-regular fa-plus fa-2xl fa-lh-unset me-2"></i>
                        <p class="icon-description">Create a new post</p>
                    </a>
                    <hr class="my-4">
                {% endif %}

                {% for post in posts %}
                    <!-- Post preview-->
                    <div class="post-preview">
                        <a href="/blog/public/posts/{{ post.post.postId }}">
                            <h2 class="post-title">{{ post.post.title }}</h2>
                            <h3 class="post-subtitle">{{ post.post.excerpt }}</h3>
                        </a>
                        <p class="post-meta">
                            Posted by
                            <a href="#!">{{ post.pseudoUser }}</a>
                            {{ post.post.creationDate|date("F jS, Y \\a\\t H:i") }}
                        </p>
                    </div>
                    <!-- Divider-->
                    <hr class="my-4">
                {% endfor %}
                <!-- Pager-->
                <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older
                        Posts â†’</a></div>
            </div>
        </div>
    </div>
{% endblock %}
